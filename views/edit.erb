
<form class="w-full max-w-lg grid gap-2" type="submit" hx-post="/user" hx-target="#content">

    <div>
      <label for="name" class="text-sm font-medium">Full Name</label>
      <input type="text" name="user[name]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
    </div>
    <div>
      <label for="email" class="text-sm font-medium">User Name</label>
      <input type="email" name="user[email]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
    </div>

    <div class="grid grid-cols-2 gap-2">
      <div>
        <label for="password" class="text-sm font-medium">Password</label>
        <input type="password" name="user[password]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
      <div>
        <label for="password_cofirm" class="text-sm font-medium">Confirm Password</label>
        <input type="password" name="user[password_cofirm]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-2">
      <div>
        <label for="department" class="text-sm font-medium">Department</label>
        <input type="text" id="user[department]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
      <div>
        <label for="designation" class="text-sm font-medium">Designation</label>
        <input type="text" name="user[designation]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-2">
      <div>
        <label  class="text-sm font-medium">Staff Number</label>
        <input type="text" name="user[staffnum]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
      <div>
        <label class="text-sm font-medium">Unit</label>
        <input type="text" name="user[unit]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-2">
      <div>
        <label  class="text-sm font-medium">Date Of Birth</label>
        <input type="date" name="user[dob]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
      <div>
        <label  class="text-sm font-medium">Date Of Join</label>
        <input type="date" name="user[doj]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-2">
      <div>
        <label class="text-sm font-medium">Wage Group</label>
        <input type="text" name="user[wagegroup]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
      <div>
        <label  class="text-sm font-medium">Cost Center</label>
        <input type="text" name="user[costcenter]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
    </div>

    <div class="grid grid-cols-3 gap-2">
      <div>
        <label class="text-md">EasyPush Access</label>
        <select name="user[access]" class="border border-blue-900 rounded py-1 px-3 w-full">
          <option> No EasyPush Access</option>
          <option> Full EasyPush Access</option>
          <option> Password change</option>
          <option> User Update</option>
        </select>
      </div>
      <div>
        <label for="user[quota]" class="text-sm font-medium">Mail Quota</label>
        <input type="text"name="user[quota]" class="border border-blue-900 rounded py-1 px-3 w-full" required/>
      </div>
      <div>
        <label class="text-sm font-medium">Account Status</label>
        <select name="user[status]" class="border border-blue-900 rounded py-1 px-3 w-full">
          <option> Active</option>
          <option> Disabled</option>
        </select>
      </div>
    </div>
    <button class="w-1/3 place-self-center bg-blue-800 rounded-lg text-white my-4 py-1">Submit</button>
  </form>

